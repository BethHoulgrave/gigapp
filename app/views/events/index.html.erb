<% content_for :center do %>
  <h1>Listing events</h1>

  <br />
  <%= link_to 'New Event', new_event_path %>
  <br />

  <div id="accordion" class="col-md-2-offset">
    <% @events.each do | date, events | %>
      <h3><%= date %> </h3>
      <div>
      <% events.each do |event| puts%>
        <div class="inner">
          <%#=event.inspect%>

            <div class="banddiv">
              <div id="eventinfo">
                <ul>
                  <li><%= event.time %></li>
                  <li><%= event.user.name %></li>
                  <li><%= event.user.address %></li>
                  <br />
                  <li>Â£<%= event.ticket_price %></li>
                  <li><a href="<%= event.ticket_link %>">Buy Tickets</a></li>
                  <li><%= event.category_id %></li>
                </ul>
              </div>

              <% @bandarray = [] %>
              <% @musicarray = [] %>
              <% @lineup = [] %>

              <% for band in event.bands %>

                <% @bandarray.push(band.band_image) %>

                <% @musicarray.push(band.audio_file) %>

                <% @lineup.push(band.band_name) %>

                <!-- <p>
                 <%#=h band.band_name %>
                </p> -->

              <% end %>
            </div>

            <div id="lineup">
              <% @lineup.each do |b| %>
                  <p>
                    <%= b %>
                  <p>
                <% end %>
            </div>

            <div id="visualiser">
              <% @bandarray.each do |i| %>
                  <div id="singleimage">
                    <%=image_tag i %>
                  </div>
                <% end %>
            </div>

            <div id="musicbox">
              <% @musicarray.each do |s| %>
                  <div id="singleaudio">
                    <%=audio_tag s, controls: true %>
                  </div>
                <% end %>
            </div>

            <div id="toolbox">
              <table id="amend">
                <td><%= link_to image_tag("show.png"), event %></td>
                <td><%= link_to image_tag("edit.png"), edit_event_path(event) %></td>
                <td><%= link_to image_tag("destroy.png"), event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </table>
            </div>

        </div>
      <% end %>
    </div>
    <% end %> 
  </div>


